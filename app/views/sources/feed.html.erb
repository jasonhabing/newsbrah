<div class="container">
  <ul class="nav nav-tabs hidden-xs">
    <li>
    <%= link_to 'View Feed', feeds_path %>
    </li>
    <li>
    <%= link_to 'View Sources', sources_path %>
    </li>
    <li>
    <%= link_to 'Add a Source', new_source_path %>
    </li>
    <li>
    <%= link_to 'Source Report', sourcereport_path %>
    </li>
    <li>
    <%= link_to 'Top Stories', top_path %>
    </li>
  </ul>
  <ul class="nav nav-tabs visible-xs" style="background-color:#eaeaea; font-size: 16px">
   <center>Top News</center>
  </ul>

</div>
<div class="container">
<div class="row">
<div class="span3">
<h4>Pull Big News Items:</h4><br><br>

<%= render 'bignewsform' %>
</div>

<div class="span6 offset1">
<h1 style="font-size: 24px; color: gray;">Recent News</h1>
<% @feeditems.each do |item| %>

<a href="<%= item.url %>" class="feedlink"><%= item.title %></a><br>
<div class="feedpublished">
  <%= 
  unless item.published.nil?
  time_ago_in_words(item.published) 
  end
  %> ago</div> | 
<div class="feedsource"><%= item.feedsource %></div>
<br><br>

<% end %>
</div>
</div>
</div>
